{{#section 'title'}}
    ChangePassWord
{{/section}}

<div class="container">
    
	<div class="row">
      <div class="col-md-3 mx-auto"></div>
      <!-- edit form column -->
      <div class="col-md-6 personal-info">
        
        <h3>Change PassWord</h3>
        <div class="col-md-12 ">
            <div class="login-or">
                    <hr class="hr-or">
                    <span class="span-or"></span>
            </div>
        </div>
        
        <form action="/account/changepw" method="post" class="form-horizontal" role="form"  name="changepw">
          <div class="form-group">
            <label class="col-lg-3 control-label">Old Password:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" name="oldpw">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">New Password:</label>
            <div class="col-lg-8">
              <input class="form-control" name="newpw" type="text">
            </div>
          </div>
          <div class="row">
              <div class="col-md-4 "></div>
               {{#if showError}}
                <div class=" alert-danger col-md-5">{{errorMsg}}!</div>
                {{/if}}
          </div>
         
          <div class="col-md-12 ">
            <div class="login-or">
                    <hr class="hr-or">
                    <span class="span-or"></span>
            </div>
          </div>
          <div class ="row" style="margin-bottom:10px;">
            <div class="col-md-3"></div>
            <div class="col-md-4 text-center ">
              <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Ok</button>
            </div>
          </div>
        
       
        </form>  
      </div>
  </div>
</div>