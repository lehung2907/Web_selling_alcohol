
{{#section 'title'}}
    Login
{{/section}}
<div class="row">
        <div class="col-md-4 mx-auto"></div>
        {{#if showError}}
        <div class="alert alert-danger col-md-4 mx-auto" style="margin-bottom:2px;">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                {{errorMsg}} ...
        </div>
        {{/if}}
</div>

<div  class="container"  style="margin-top: 50px;">
        <div class="col-md-4 mx-auto"></div>
        <div class="col-md-4 mx-auto"  style="border: 12px solid blue;margin-top: 20px; margin-bottom:20px;" >
        {{#if showError}}
        <script type="text/javascript"> alert("Sai tên đăng nhập hoặc mật khẩu")</script>
        {{/if}}

                <form action="/account/login" method="post" name="login">
                        <div class="form-group" >
                                <div class="col-md-12 text-center">
                                        <h1>Log In</h1>
                                </div>
                        </div>
                        <div class="form-group" >
                                <label>Username</label>
                                <input type="text" name="username" class="form-control" id="username" placeholder="Enter your username">
                        </div>
                        <div class="form-group">
                                <label>Password</label>
                                <input type="password" name="password" id="password" class="form-control" placeholder="Enter Password">
                        </div>
                        <div class="col-md-12 text-center ">
                                <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Login</button>
                        </div>
                        <div class="col-md-12 ">
                                <div class="login-or">
                                        <hr class="hr-or">
                                        <span class="span-or"></span>
                                </div>
                        </div>
                                <div class="form-group">
                                <div class="text-center">
                                <label>
                                        <input type="checkbox" name="remember">
                                        Ghi nhớ
                                </label>
                                </div>
                        </div>
                        <div class="form-group">
                                <p class="text-center">Don't have account?
                                        <br>
                                        <a href="/account/register" id="register">Create account</a>
                                </p>
                        </div>
                </form>

        </div>
</div>


                                